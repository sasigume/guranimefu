rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /animeCollection/{document=**} {
      allow get, update, write, create, read, delete: if true;
    }
    match /animeCollection_backup/{document=**} {
      allow get, update, write, create, read, delete: if true;
    }
    match /animeCollection_v2/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /animeCollection_backup_v2/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}